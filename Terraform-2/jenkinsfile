pipeline {
    agent any

    stages {
        stage('Init') {
            steps {
                dir('Terraform-2') {
                    sh 'terraform init'
                }
            }
        }

        stage('Plan') {
            steps {
                dir('Terraform-2') {
                    sh 'terraform plan'
                }
            }
        }

        stage('Apply') {
            steps {
                dir('Terraform-2') {
                    sh 'terraform apply --auto-approve'
                }
            }
        }
    }
}
